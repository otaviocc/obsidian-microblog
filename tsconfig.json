{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "paths": {
      "@base/*": [
        "./*"
      ],
      "@networking/*": [
        "networking/*"
      ],
      "@views/*": [
        "views/*"
      ],
      "@factories/*": [
        "factories/*"
      ],
      "@stores/*": [
        "stores/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@extensions/*": [
        "extensions/*"
      ],
      "@components/*": [
        "components/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ]
}